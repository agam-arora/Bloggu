<script type="application/javascript" src= "/tinymce/tinymce.min.js"></script>

<div class="mt-5 mx-auto" style="width:80%;">
  <form action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
    <label for="title" class="form-label"><h4>Title:</h4></label>
    <input type="text" class="form-control mb-3" id="title" name="title" required value=<%= blog.title %>>
    <label for="content" class="form-label mb-3"><h4>Content:</h4></label>
    <textarea required name="content" id="content"><%- blog.content %></textarea>
    <button type="submit" class="btn btn-primary mt-3 mx-auto">submit</button>
  </form>
</div>

<script>
  tinymce.init({
      selector: 'textarea',
      menubar: '',
      plugins: 'uploadcare,autoresize',
      toolbar: 'undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | outdent indent | uploadcare',
      external_plugins: {
      uploadcare: '/plugin/plugin.min.js',
    },
    uploadcare_public_key: '0f6e5c859c7e4ff5d621'
   });
 
</script>